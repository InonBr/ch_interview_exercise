{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@systems/*": ["systems/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["./src", "./src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
